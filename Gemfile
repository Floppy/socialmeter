source 'https://rubygems.org'

gem 'rails', '~> 3.2.3'

gem "fastercsv"
gem "twitter"
gem "nokogiri"
gem "amee"
gem "csv_builder"

group :development do
  gem 'heroku'
  gem 'powder'
end

group :production do
  gem 'pg'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

group :development, :test do
  gem 'sqlite3'
  gem "rspec"
  gem "rspec-rails"
end